---
import { Image } from 'astro:assets';

---

<navbar class="w-full mx-auto bg-neutral-0">
    <div class="inner-section mx-auto w-[90%] max-w-[84rem] mt-6">
        <div class="w-full flex flex-col md:flex-row md:justify-between gap-4 items-center">
             <div class="logo-wrapper h-full">
                <a 
                    href="/"
                    aria-label="lien vers la page d'accueil"
                    class="flex-none"
                >
                    <Image
                        src="/images/logo-brand.svg"
                        alt="logo - Coaching by Helena" 
                        width={256}
                        height={128}
                        loading=eager
                        class="logo__img bg-cover max-h-16 max-w-[160px] md:h-full md:max-h-[224px]">
                </a>
            </div>
            <nav>
                <ul class="flex gap-4 md:gap-6 text-fs-small font-normal text-neutral-900">
                    <li class="hover:text-brand-400"><a href="#coachings">Coaching</a></li>
                    <li class="hover:text-brand-400"><a href="#pricing">Tarifs</a></li>
                    <li class="hover:text-brand-400"><a href="/helena">Helena</a></li>
                </ul>
            </nav>
        </div>
    </div>
</navbar>